package javaapplication3;

public class JavaApplication3 {

    public static void main(String[] args) {

        int numero = 10;

        if (numero > 0) {
            System.out.println("O número é positivo");
        } else if (numero < 0) {
            System.out.println("O número é negativo");
        } else {
            System.out.println("O númeoro é zero");
        }
    }

}
